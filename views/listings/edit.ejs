<% layout("/layouts/boilerplate.ejs") -%>

<div class="container mt-4">
  <h2 class="mb-4 text-center">Edit Listing</h2>

  <form 
    method="POST" 
    action="/listings/<%= listing._id %>?_method=PUT" 
    enctype="multipart/form-data" 
    class="p-4 bg-light rounded shadow-sm" 
    style="max-width: 700px; margin: auto;"
  >
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input 
        type="text" 
        name="listing[title]" 
        id="title" 
        class="form-control" 
        value="<%= listing.title %>" 
        required 
      />
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea 
        name="listing[description]" 
        id="description" 
        rows="3" 
        class="form-control" 
        required
      ><%= listing.description %></textarea>
    </div>

    <!-- Existing Image -->
    <% if (listing.image && listing.image.url) { %>
      <div class="mb-3">
        <label class="form-label">Current Image</label>
        <div>
          <img 
            src="<%= listing.image.url %>" 
            alt="Listing Image" 
            class="img-fluid rounded" 
            style="max-height: 300px;" 
          />
        </div>
      </div>
    <% } %>

    <!-- File Upload -->
    <div class="mb-3">
      <label for="image" class="form-label">Upload New Image</label>
      <input 
        type="file" 
        name="image" 
        id="image" 
        class="form-control" 
        accept="image/*" 
      />
      <small class="text-muted">Leave empty if you do not want to change the image.</small>
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input 
        type="number" 
        name="listing[price]" 
        id="price" 
        class="form-control" 
        value="<%= listing.price %>" 
        required 
      />
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input 
        type="text" 
        name="listing[location]" 
        id="location" 
        class="form-control" 
        value="<%= listing.location %>" 
        required 
      />
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input 
        type="text" 
        name="listing[country]" 
        id="country" 
        class="form-control" 
        value="<%= listing.country %>" 
        required 
      />
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <button type="submit" class="btn btn-success">Update Listing</button>
    </div>
  </form>
</div>



